                <label asp-for="TextField" class="control-label">Text Field</label>
                <input asp-for="TextField" class="form-control" />
                <span asp-validation-for="TextField" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValueField" class="control-label">Value Field</label>
                <input asp-for="ValueField" class="form-control" />
                <span asp-validation-for="ValueField" class="text-danger"></span>
            </div>
