            <div class="form-group">
                <label asp-for="ControlType" class="control-label"> Control Type</label>
                <select asp-for="ControlType" asp-items="Html.GetEnumSelectList<IMTestProject.Common.Enum.ControlTypeEnum>()">
                    <option selected="selected" value="">Please select</option>
</select>
                <span asp-validation-for="ControlType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataType" class="control-label"> Data Type</label>
